/** index.wxss **/
.container { padding: 30rpx 40rpx; padding-bottom: 180rpx; min-height: 100vh; background-color: #f3f4f6; box-sizing: border-box; font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif; }

/* === Header & Streak === */
.header-area { margin-bottom: 40rpx; display: flex; flex-direction: column; gap: 20rpx; }
.header-text { display: flex; justify-content: space-between; align-items: flex-end; }
.title { font-size: 56rpx; font-weight: 800; color: #1e293b; letter-spacing: -1rpx; line-height: 1; }
.subtitle-row { display: flex; align-items: center; margin-top: 10rpx; }
.subtitle { font-size: 26rpx; color: #64748b; margin-right: 16rpx; font-weight: 500; }
.streak-badge { background: linear-gradient(135deg, #f97316 0%, #fb923c 100%); color: white; font-size: 22rpx; padding: 6rpx 16rpx; border-radius: 99rpx; font-weight: 700; box-shadow: 0 4rpx 12rpx rgba(249, 115, 22, 0.3); display: flex; align-items: center; gap: 6rpx; }

/* === Modern Segmented Switcher === */
.mode-switch { align-self: flex-start; background: #e2e8f0; padding: 6rpx; border-radius: 20rpx; display: flex; align-items: center; position: relative; }
.mode-switch text { padding: 10rpx 28rpx; font-size: 26rpx; color: #64748b; font-weight: 600; border-radius: 14rpx; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); z-index: 2; position: relative; }
.mode-switch .active { color: #0f172a; background: #ffffff; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); transform: scale(1.02); }
.mode-switch .divider { display: none; } /* Hide old dividers */

/* === Tabs === */
.tab-bar { display: flex; background: #ffffff; border-radius: 24rpx; padding: 10rpx; margin-bottom: 40rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.03); }
.tab-item { flex: 1; text-align: center; padding: 20rpx 0; font-size: 28rpx; color: #94a3b8; border-radius: 18rpx; transition: all 0.3s; font-weight: 600; }
.tab-item.active { background: #eff6ff; color: #3b82f6; font-weight: 800; }

/* === Project Card (Redesigned) === */
.project-card { background: #ffffff; border-radius: 32rpx; margin-bottom: 36rpx; box-shadow: 0 10rpx 25rpx rgba(0,0,0,0.04); overflow: hidden; transition: all 0.3s ease; border: 1rpx solid #f1f5f9; }
.project-card.project-done { background: #f8fafc; opacity: 0.8; filter: grayscale(0.9); box-shadow: none; border: 1rpx dashed #cbd5e1; }

.project-header { padding: 36rpx; display: flex; justify-content: space-between; align-items: center; }

/* Left Side: Checkbox + Title */
.project-info { display: flex; align-items: center; gap: 20rpx; flex: 1; }
.checkbox-area { display: flex; align-items: center; justify-content: center; width: 60rpx; height: 60rpx; border-radius: 50%; transition: background 0.2s; }
.checkbox-area:active { background: #f1f5f9; }
.checkbox { width: 40rpx; height: 40rpx; border: 4rpx solid #cbd5e1; border-radius: 12rpx; transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1); }
.checkbox.checked { background: #10b981; border-color: #10b981; transform: scale(1.1); }
.project-text-col { display: flex; flex-direction: column; }
.project-title { font-size: 34rpx; font-weight: 800; color: #1e293b; margin-bottom: 4rpx; transition: color 0.3s; }
.project-title.done-text { text-decoration: line-through; color: #94a3b8; }
.project-update { font-size: 22rpx; color: #94a3b8; font-weight: 500; }

/* Right Side: Stat */
.project-stat { display: flex; flex-direction: column; align-items: flex-end; background: #f8fafc; padding: 10rpx 20rpx; border-radius: 20rpx; border: 1rpx solid #f1f5f9; }
.stat-num { font-size: 36rpx; font-weight: 800; color: #3b82f6; line-height: 1; }
.stat-unit { font-size: 20rpx; color: #64748b; font-weight: 600; text-transform: uppercase; margin-top: 4rpx; }

/* Action Area */
.project-action { padding: 0 36rpx 36rpx 36rpx; }
.add-btn { width: 100%; background: #eff6ff; color: #3b82f6; font-size: 26rpx; padding: 20rpx 0; border-radius: 20rpx; font-weight: 700; text-align: center; transition: all 0.2s; border: 2rpx dashed #bfdbfe; }
.add-btn:active { background: #dbeafe; transform: scale(0.99); }

/* History List */
.project-history { background: #fbfcfe; padding: 20rpx 36rpx; border-top: 2rpx dashed #f1f5f9; }
.history-item { display: flex; align-items: center; padding: 16rpx 0; font-size: 26rpx; color: #64748b; border-bottom: 1rpx solid #f1f5f9; }
.history-item:last-child { border-bottom: none; }
.h-date { width: 90rpx; font-size: 22rpx; color: #94a3b8; font-family: monospace; }
.h-note { flex: 1; margin: 0 20rpx; color: #475569; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }
.h-note.done-text { text-decoration: line-through; color: #cbd5e1; }
.h-duration { font-weight: 700; color: #3b82f6; font-size: 24rpx; }

/* === Timeline Cards === */
.group-header { margin: 30rpx 10rpx 16rpx 10rpx; }
.group-title { font-size: 30rpx; font-weight: 800; color: #475569; letter-spacing: -0.5rpx; }
.card { background: #ffffff; border-radius: 24rpx; padding: 30rpx; display: flex; align-items: center; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.03); margin-bottom: 20rpx; position: relative; overflow: hidden; }
.card::before { content: ''; position: absolute; left: 0; top: 0; bottom: 0; width: 8rpx; background: #e2e8f0; }
.priority-border-1::before { background: #ef4444; } 
.priority-border-2::before { background: #f59e0b; } 
.priority-border-3::before { background: #3b82f6; } 
.priority-border-4::before { background: #cbd5e1; }

.card-content { flex: 1; margin-left: 20rpx; min-width: 0; }
.card-top { display: flex; justify-content: space-between; align-items: center; margin-bottom: 6rpx; }
.activity-name { font-size: 32rpx; font-weight: 700; color: #1e293b; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; padding-right: 20rpx; }
.activity-name.done-text { text-decoration: line-through; color: #cbd5e1; }
.duration-badge { font-size: 22rpx; font-weight: 700; color: #3b82f6; background: #eff6ff; padding: 6rpx 14rpx; border-radius: 12rpx; flex-shrink: 0; }

.card-footer-row { display: flex; justify-content: space-between; align-items: center; }
.note-text { font-size: 26rpx; color: #64748b; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; flex: 1; margin-right: 20rpx; }
.date-text { font-size: 22rpx; color: #94a3b8; font-weight: 500; flex-shrink: 0; }

.card-img { width: 100rpx; height: 100rpx; border-radius: 16rpx; margin-right: 20rpx; background: #f1f5f9; object-fit: cover; }

/* === Gold Card (Output) === */
.gold-card { background: linear-gradient(135deg, #fffbeb 0%, #ffffff 100%); border: 2rpx solid #fef3c7; box-shadow: 0 10rpx 30rpx rgba(245, 158, 11, 0.1); }
.gold-card::before { background: #f59e0b; } /* Orange/Gold Strip */
.gold-badge { background: #f59e0b; color: #fff; font-size: 20rpx; padding: 4rpx 10rpx; border-radius: 8rpx; font-weight: 700; }
.star-filled { color: #f59e0b; font-size: 28rpx; }

/* === Budget === */
.budget-card { background: linear-gradient(120deg, #1e293b 0%, #334155 100%); border-radius: 32rpx; padding: 40rpx; color: #fff; margin-bottom: 40rpx; box-shadow: 0 16rpx 40rpx rgba(30, 41, 59, 0.25); position: relative; overflow: hidden; }
.budget-card::after { content: ''; position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background: radial-gradient(circle, rgba(255,255,255,0.05) 0%, transparent 60%); pointer-events: none; }
.amount-large { font-size: 72rpx; font-weight: 800; letter-spacing: -2rpx; margin: 20rpx 0; display: block; }
.progress-container { background: rgba(255,255,255,0.1); height: 10rpx; border-radius: 5rpx; }

/* === FAB === */
.fab-btn { position: fixed; bottom: 60rpx; right: 40rpx; width: 120rpx; height: 120rpx; background: #1e293b; border-radius: 40rpx; box-shadow: 0 20rpx 40rpx rgba(30, 41, 59, 0.3); display: flex; align-items: center; justify-content: center; color: white; font-size: 60rpx; z-index: 100; transition: transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1); }
.fab-btn:active { transform: scale(0.9) rotate(90deg); }
.empty-state { display: flex; flex-direction: column; align-items: center; padding: 120rpx 0; opacity: 0.5; }
.empty-emoji { font-size: 100rpx; margin-bottom: 30rpx; filter: grayscale(1); }